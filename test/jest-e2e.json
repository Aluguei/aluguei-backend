{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "..",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@common(.*)$": "<rootDir>/src/modules/common/$1",

    "@modules(.*)$": "<rootDir>/src/modules/$1",

    "@config(.*)$": "<rootDir>/src/config/$1",

    "@src(.*)$": "<rootDir>/src/$1"
  }
}
