{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@common/*": ["src/modules/common/*"],
      "@common": ["src/modules/common"],

      "@modules/*": ["src/modules/*"],
      "@modules": ["src/modules"],

      "@config/*": ["src/config/*"],
      "@config": ["src/config"],

      "@src/*": ["src/*"],
      "@src": ["src"]
    },
    "incremental": true,
    "skipLibCheck": true
  }
}
